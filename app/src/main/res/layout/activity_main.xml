<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guiqian.xingzuo.MainActivity">

    <guiqian.xingzuo.widget.CommonBannerView
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </guiqian.xingzuo.widget.CommonBannerView>

    <TextView
        android:id="@+id/xingzuowang"
        android:layout_below="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="星座大王"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        />


        <Button
            android:layout_below="@+id/xingzuowang"
            android:id="@+id/btn_dream"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/dream_btn"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/et_dream"
            android:layout_below="@+id/btn_dream" />



</RelativeLayout>

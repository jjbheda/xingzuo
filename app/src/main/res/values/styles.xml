<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="img_spec">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="xingzuoys_tv">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="text_18_444444">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="text_16_444444">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="text_ttd_tab">
        <item name="android:textColor">@drawable/ttd_tab_textview_selector</item>
        <item name="android:textSize">18dip</item>
    </style>
</resources>
